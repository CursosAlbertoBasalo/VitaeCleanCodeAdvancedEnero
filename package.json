{
  "name": "clean-code_advanced",
  "version": "1.0.0",
  "description": "Design Patterns and Software Architecture",
  "author": {
    "name": "Alberto Basalo",
    "email": "albertobasalo@hotmail.com",
    "url": "https://twitter.com/albertobasalo"
  },
  "homepage": "https://github.com/LabsAdemy/CleaCodeAdvanced#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LabsAdemy/CleaCodeAdvanced.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LabsAdemy/CleaCodeAdvanced/issues"
  },
  "scripts": {
    "start": "node ./dist/main.js",
    "test": "jest --coverage",
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node ./src/main.ts",
    "test:dev": "jest --watchAll ",
    "ts-node": "ts-node",
    "format": "prettier --write \"./**/*.{ts,json}\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "update": "ncu -u"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "npm-check-updates": "^12.1.0",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0"
  },
  "dependencies": {
    "typescript": "^4.5.4"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "@ab/(.*)": "<rootDir>/src/$1"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/temp/"
    ],
    "verbose": true,
    "collectCoverage": false
  }
}